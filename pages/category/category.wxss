/* pages/category/category.wxss */
.category-headAvatar {
  position: relative;
  width: 48px;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.category-headAvatar image {
  width: 50%;
  height: 50%;
  border-radius: 50%;
}
.category-headAvatar .login-button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.section {
  padding: 40rpx;
  padding-bottom: 48rpx;
}

.section-features {
  height: 100%;
  min-height: 100vh;
}

.category_loading.skeleton .skeleton-rect {
  height: 33vh;
  margin-top: 40rpx;
  background: #fff;
  border-radius: 15rpx;
}

.section-features .feature-list {
  width: 100%;
}

.section-features .feature-list .feature-card {
  position: relative;
  width: 100%;
  margin-bottom: 40rpx;
  font-weight: 300;
  font-size: 18px;
  flex: 1 0 auto;
  background: #fff;
  border-radius: 15rpx;
}

.section-features .feature-list .feature-card .card-cover {
  width: 100%;
  padding-top: 380rpx;
  max-width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.section-features .feature-list .feature-card .card-main {
  position: relative;
  text-align: left;
}

.section-features .feature-list .feature-card .card-main .card-top {
  padding: 30rpx 30rpx;
}

.section-features .feature-list .feature-card .card-title {
  line-height: 48rpx;
  font-weight: 400;
  margin-bottom: 30rpx;
}

.section-features .feature-list .feature-card .card-content text {
  margin: 0;
  margin-bottom: 10px;
  font-size: 80%;
}

.section-features .feature-list .feature-card .card-main .card-actions {
  padding: 20rpx 30rpx 30rpx;
}

.section-features .feature-list .feature-card .action-item {
  font-size: 30rpx;
}

.is-flex {
  display: flex;
}

.center-xs {
  justify-content: center;
  text-align: center;
}

.middle-xs {
  align-items: center;
}

.end-xs {
  justify-content: flex-end;
  text-align: end;
}

.direction-vert {
  flex-direction: column;
}