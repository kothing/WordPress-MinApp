/* pages/pages/pages.wxss */
.is-flex {
  display: flex;
}

.center-xs {
  justify-content: center;
  text-align: center;
}

.middle-xs {
  align-items: center;
}

.end-xs {
  justify-content: flex-end;
  text-align: end;
}

.direction-vert {
  flex-direction: column;
}

.section {
  padding: 40rpx;
  padding-bottom: 48rpx;
}

.section-features {
  height: 100%;
  min-height: 100vh;
}

.category_loading.skeleton .skeleton-rect {
  height: 33vh;
  margin-top: 40rpx;
  background: #fff;
  border-radius: 15rpx;
}

.section-features .feature-list {
  width: 100%;
}

.section-features .feature-list .feature-card {
  position: relative;
  width: 100%;
  margin-bottom: 40rpx;
  font-weight: 300;
  font-size: 18px;
  flex: 1 0 auto;
  background: #fff;
  border-radius: 15rpx;
}

.section-features .feature-list .feature-card .card-cover {
  width: 100%;
  padding-top: 380rpx;
  max-width: 100%;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.section-features .feature-list .feature-card .card-main {
  position: relative;
  padding: 0;
  padding-top: 280rpx;
  -webkit-transform: translate3d(0, 0, 0) !important;
  transform: translate3d(0, 0, 0) !important;
  text-align: left;
}

.section-features .feature-list .feature-card .card-main .card-top {
  padding: 30rpx 29rpx;
  position: absolute;
  top: 0;
}

.section-features .feature-list .feature-card .card-title {
  line-height: 44rpx;
  font-weight: 400;
  padding-top: 20rpx;
  margin-bottom: 29.5rpx;
}

.section-features .feature-list .feature-card .card-content text {
  margin: 0;
  margin-bottom: 10px;
  font-size: 80%;
}

.section-features .feature-list .feature-card .card-main .card-actions {
  bottom: 0;
  right: 0;
  margin-right: 0;
  padding: 30rpx 29rpx;
  position: absolute;
}

.section-features .feature-list .feature-card .action-item {
  font-size: 30rpx;
}