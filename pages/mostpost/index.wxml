<!--pages/list/list.wxml-->
<view class="tab-content">
  <view class="mostpost">
    <view class="post_article" wx:if="{{posts.length>0}}">
      <block wx:for="{{posts}}" wx:for-index="i" wx:key="item">
        <block wx:if="{{i%5 == 0}}">
          <view bindtap="bindDetail" class="post_article_box" id="{{item.id}}">
            <view class="post_article_figure">
              <image mode="aspectFill" class="post_article_cover" src="{{item.meta.thumbnail || '/images/default_thumb.png'}}"></image>
              <view class="post_article_during">
                <text>{{item.category[0].name}}</text>
              </view>
            </view>
            <view class="post_article_title">{{item.title.rendered}}</view>
            <view class="post_article_desc">{{item.excerpt.rendered}}</view>
          </view>
          <view class="advert" wx:if="{{advert.type == 'unit'}}">
            <ad unit-id="{{advert.code}}"></ad>
          </view>
        </block>
        <block wx:else>
          <view bindtap="bindDetail" class="post_article_box" id="{{item.id}}">
            <view class="post_article_figure">
              <image mode="aspectFill" class="post_article_cover" src="{{item.meta.thumbnail || '/images/default_thumb.png'}}"></image>
              <view class="post_article_during">
                <text>{{item.category[0].name}}</text>
              </view>
            </view>
            <view class="post_article_title">{{item.title.rendered}}</view>
            <view class="post_article_desc">{{item.excerpt.rendered}}</view>
          </view>
        </block>
      </block>
    </view>
    <view class="post_article" wx:if="{{isLastPage&&posts.length==0}}">
      <view style="position: relative;height: 380rpx">
        <image mode="aspectFill" class="post_article_cover" src="../../images/message.png"></image>
      </view>
      <view class="last_text">对不起! 你查看的内容没有找到</view>
    </view>
    <view class="last_text" wx:if="{{isLastPage&&posts.length>0}}">已经到底啦~</view>
    <view class="last_text" wx:if="{{!isLastPage&&posts.length>0}}">努力加载中...</view>
  </view>
</view>