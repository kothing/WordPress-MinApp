/* pages/page/page.wxss */
.header-banner {
  position: relative;
  display: block;
  width: 100%;
  height: 0;
  padding: 0;
  padding-bottom: 56.25%;
  overflow: hidden;
}

.header-banner .header-image {
  width: 100vmax;
}

.page-detail {
  min-height: calc(100vh - 450rpx);
  position: relative;
  background-color: #fff;
  box-shadow: 0px 5px 20px -5px #ddd;
  border-radius: 10px;
  margin: -90rpx 38rpx 100rpx;
  z-index: 2;
  -webkit-overflow-scrolling: touch;
}

.page-info {
  padding: 58rpx 0 40rpx;
  margin: 0rpx 45rpx;
  border-radius: 15rpx;
}

.page-info .title {
  display: block;
  text-align: center;
  font-weight: 700;
  font-family: PingFangSC-Medium, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 40rpx;
}

.page-info .meta {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.page-info .meta .cuIcon-profile,
.page-info .meta .cuIcon-time {
  margin-right: 12rpx;
}

.page-info .meta .author,
.page-info .meta .time {
  margin-right: 20rpx;
  font-family: PingFangSC-Regular, "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 90%;
  color: #7d7d7d;
}

.page-info.skeleton .title {
  width: 100%;
  height: 40rpx;
  background: #f3f3f3;
}

.page-info.skeleton .meta .avator {
  background: #f3f3f3;
}

.page-infos.skeleton .meta .category {
  width: 100rpx;
  height: 40rpx;
  background: #f3f3f3;
}

.page-info.skeleton .meta i {
  display: inline-block;
  width: 3rpx;
  height: 32rpx;
  background: #eee;
  margin: 0 20rpx;
  vertical-align: middle;
}

.page-info.skeleton .meta .time {
  width: 100rpx;
  height: 40rpx;
  background: #f3f3f3;
}

.entry-content {
  clear: both;
  color: #404246;
  margin: 0;
  padding: 0 45rpx 30rpx;
  font-size: 90%;
  line-height: 68rpx;
  text-align: justify;
  word-wrap: break-word;
  word-break: normal;
  font-family: PingFangSC-Regular, "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.entry-content video {
  width: 100% !important;
}

.entry-content image {
  width: 100% !important;
}

.entry-content .wxParse-blockquote {
  margin-bottom: 40rpx;
}

.entry-content.skeleton .skeleton-content {
  padding-top: 20rpx;
}

.entry-content.skeleton .skeleton-content .c1 {
  width: 100%;
  height: 40rpx;
  background: #f3f3f3;
}

.entry-content.skeleton .skeleton-content .c2 {
  width: 100%;
  height: 250rpx;
  background: #f3f3f3;
  margin-top: 20rpx;
}