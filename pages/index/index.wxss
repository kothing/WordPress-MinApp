  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.portfolio .bg-imgd {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.portfolio .bg-imgh {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.portfolio .bg-imge {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.portfolio .bg-imgz image,
.portfolio .bg-imgd image,
.portfolio .bg-imgh image,
.portfolio .bg-imge image {
