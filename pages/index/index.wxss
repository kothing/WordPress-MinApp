/**index.wxss**/
page::-webkit-scrollbar {
  display: none;
}

.page.iphone-x {
  padding-bottom: 20rpx;
}

.index-headAvatar {
  position: relative;
  width: 48px;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.index-headAvatar image {
  width: 50%;
  height: 50%;
  border-radius: 50%;
}

.index-headAvatar .login-button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

/* .index-headTitle {} */

.index {
  position: relative;
}

.header {
  padding: 0 40rpx;
  background: -webkit-linear-gradient(to right, #6188ef, #98b4f5);
  background: linear-gradient(to right, #6188ef, #98b4f5);
  color: #fff;
}

.header .app-title {
  font-weight: bold;
  font-size: 58rpx;
  line-height: 68rpx;
}

.header .app-brief {
  font-size: 28rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}

.header .app-title_text {
  display: inline-block;
  vertical-align: middle;
}

.search-form {
  font-size: 90%;
}

.feature {
  background: #fff;
}

.feature .skeleton {
  width: 100%;
  display: block;
  overflow: hidden;
}

.feature .skeleton .skeleton-rect {
  height: 300rpx;
  margin: 36rpx;
  background: #f0f0f0;
  border-radius: 15rpx;
}

.feature .screen-swiper {
  text-align: center;
  padding: 36rpx;
}

/* 首页图标 */
.banner-bg {
  position: absolute;
  width: 100vw;
  bottom: 0;
  left: 0;
}

.banner {
  position: relative;
  display: flex;
  flex-direction: column;
  /* background: #fff; */
}

.banner::after {
  content: "";
  display: block;
  height: 80rpx;
  width: 100vw;
  position: absolute;
  left: 0;
  bottom: 0;
  background-image: linear-gradient(180deg, rgba(255, 255, 255, 0.00) 0%, #F9F9F9 100%);
  pointer-events: none;
  z-index: -1;
}

.banner .skeleton .cu-item {
  display: flex;
  align-items: center;
}

.banner .skeleton .skeleton-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.bg-imgz {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.bg-imgd {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.bg-imgh {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.bg-imge {
  width: 100rpx;
  height: 100rpx;
  background-repeat: no-repeat;
  background-size: 100rpx 100rpx;
  margin: 0 auto;
  overflow: hidden;
}

.bg-imgz image,
.bg-imgd image,
.bg-imgh image,
.bg-imge image {
  width: 100%;
  height: 100%;
}

.auth-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  padding: 0;
  text-align: left;
  line-height: 120rpx;
  color: #3A3A3A;
}

/* Tabs */
.tabs-list .weui-tabs {
  width: 100%;
}

.weui-tabs-bar__wrp {
  width: 100%;
  border-bottom: 1px solid #fff;
  margin-top: 38rpx;
  padding: 36rpx 36rpx 0;
  background: #fff
}

.weui-tabs-bar__content {
  width: 100%;
  white-space: nowrap
}

.weui-tabs-bar__item {
  display: inline-block
}

.weui-tabs-bar__title {
  display: inline-block;
  border-bottom-width: 2px;
  border-bottom-style: solid;
  border-bottom-color: transparent
}

.weui-tabs-swiper {
  position: relative;
  width: 100%;
  min-height: 100%;
  height: 780rpx;
  padding: 0 36rpx;
  background-color: #fff;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 120%;
  font-weight: bold;
}

.weui-tabs-bar__item {
  background-color: #fff !important;
  color: rgba(0, 0, 0, .9) !important;
}

.tabs-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20px 0;
}

.tabs-content .item-title {
  margin: 10px 10px 5px;
  font-size: 18px;
  width: 100%;
}

.tabs-content .item-desc {
  width: 100%;
  margin-bottom: 10px;
  color: rgba(0, 0, 0, .5)
}

.tabs-content .cat-posts-list {
  margin: 0;
}

.tabs-content .cat-posts-list .sub-item-title {
  position: relative;
  padding: 10rpx 0 10rpx 30rpx;
}

.tabs-content .cat-posts-list .sub-item-title .before-dot {
  position: absolute;
  top: 30rpx;
  left: 0;
  content: ' ';
  height: 4px;
  width: 4px;
  background: #454545;
}


/* Tabs End */

.tab-content {
  display: block;
  background: #ffffff;
  overflow: hidden;
}

.index-box {
  margin-top: 40rpx;
  padding: 0 36rpx;
}

.index_loading {
  height: calc(100vh - (500rpx));
  background-color: #fff;
  margin-top: 40rpx;
  /* display: flex;
  align-items: center;
  justify-content:center; */
}

.index_loading.skeleton {
  margin: 36rpx;
}

.index_loading.skeleton .skeleton-rect {
  height: 25vh;
  margin-top: 40rpx;
  background: #f0f0f0;
  border-radius: 15rpx;
}

.index_label {
  position: relative;
  height: 120rpx;
}

.index_label_title {
  font-size: 40rpx;
  color: #262626;
  position: absolute;
  top: 28rpx;
  left: 0;
  z-index: 1;
}

.index_label_bg {
  width: 160rpx;
  height: 12rpx;
  background: linear-gradient(270deg, rgba(249, 228, 135, 0) 0%, rgba(241, 197, 79, 1) 100%);
  border-radius: 11rpx;
  position: absolute;
  top: 86rpx;
  left: 0;
}

.index_label_more {
  position: absolute;
  right: 0;
  top: 40rpx;
  color: #888888;
  font-size: 28rpx;
  line-height: 48rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.index_label_more .category {
  padding: 0 10rpx;
}

.wz-ui {
  border-bottom: 2px solid #f7f7f7;
}

.margin_right_30 {
  margin-right: 30rpx;
}

.margin_right_0 {
  margin-right: 0;
}

.index_article_box {
  margin-bottom: 38rpx;
  padding-bottom: 38rpx;
  border-bottom: 1px dotted #c5c5c5;
}

.index_article_figures {
  position: relative;
  display: block;
  width: 100%;
  max-height: 56.25vh;
}

.index_article_figure {
  position: relative;
  display: block;
  width: 100%;
  height: 0;
  padding: 0;
  padding-bottom: 56.25%;
  overflow: hidden;
}

.index_article_figure_cover {
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
}

.index_article_figure_title {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.index_article_figure_title text {
  display: inline-block;
  max-width: 160px;
  line-height: 40rpx;
  background: rgba(38, 38, 38, 1);
  border-radius: 8rpx;
  opacity: 0.9;
  padding: 10rpx 15rpx;
  font-size: 80%;
  color: #fff;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.index_article_cover {
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
}

.index_article {
  position: relative;
  margin-top: 36rpx;
}

.index_article_title {
  width: 100%;
  font-size: 110%;
  font-weight: 500;
  color: rgba(38, 38, 38, 1);
  line-height: 50rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.index_article_desc {
  color: #888888;
  margin-top: 16rpx;
  font-size: 90%;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  overflow: hidden;
}

.index_article_during {
  position: absolute;
  top: 326rpx;
  left: 16rpx;
  z-index: 1;
  line-height: 40rpx;
  background: rgba(38, 38, 38, 1);
  border-radius: 8rpx;
  opacity: 0.9;
  padding: 2rpx 10rpx;
  text-align: center;
}

.index_article_during text {
  font-size: 80%;
  color: #fff;
}

.last_text {
  width: 100%;
  text-align: center;
  color: #AAA;
  font-size: 90%;
  margin: 90rpx 0 30rpx;
}

.dialog .t1 {
  color: #262626;
  font-size: 36rpx;
  width: 100%;
  text-align: center;
  margin: 70rpx auto 50rpx;
}

.dialog .t2 {
  color: #888;
  font-size: 32rpx;
  width: 100%;
  text-align: center;
}

.dialog .t3 {
  width: 500rpx;
  height: 174rpx;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.dialog .t4 {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 0 30rpx;
}

.dialog .t4 .cancel {
  width: 240rpx;
  height: 70rpx;
  background: #fff;
  border: 1rpx solid #F1C54F;
  color: #F1C54F;
  text-align: center;
  line-height: 70rpx;
}

.dialog .t4 .go_set {
  width: 240rpx;
  height: 70rpx;
  background: rgba(241, 197, 79, 1);
  color: #fff;
  text-align: center;
  line-height: 70rpx;
}

.close-btn {
  width: 36rpx;
  height: 36rpx;
  margin-left: 24rpx;
  border-radius: 50%;
  opacity: 0.4;
}