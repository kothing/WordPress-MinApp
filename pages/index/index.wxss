}

.portfolio .service-btn {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  padding: 0;
  text-align: left;
  line-height: 120rpx;
  color: #3A3A3A;
}

/* Itemize */
.itemize {
  margin: 24rpx 24rpx;
  border-radius: 6px;
  box-shadow: 0px 5px 20px -5px #ddd;
}

.itemize .weui-tabs {
  width: 100%;
  border-radius: 6pxï¼›
}

.weui-tabs-bar__wrp {
  width: 100%;
  padding: 36rpx 24rpx 24rpx;
  border-radius: 6px 6px 0 0;
  background: #fff
}

.weui-tabs-bar__content {
  width: 100%;
  white-space: nowrap
}

.weui-tabs-bar__item {
  display: inline-block
}

.weui-tabs-bar__title {
  display: inline-block;
  border-bottom-width: 2px;
  border-bottom-style: solid;
  border-bottom-color: transparent
}

.weui-tabs-swiper {
  min-height: 100%;
  height: var(--tbs-height);
  padding: 0 24rpx;
  background: #fff;
  border-radius: 0 0 6px 6px;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}
.weui-tabs-bar__item:first-child .weui-tabs-bar__title {
  margin-left: 0;
}

.tab-bar-title__selected {
  font-size: 120%;
  font-weight: bold;
}

.weui-tabs-bar__item {
  background-color: #fff !important;
  color: rgba(0, 0, 0, .9) !important;
}

.itemize .tabs-box {
  position: relative;
  width: 100%;
  min-height: 100%;
  height: var(--tbs-height);
  background-color: #fff;
  border-radius: 0 0 6px 6px;
}

.itemize .panel-box {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.itemize .panel-box .panel {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

.itemize .panel-box .panel:active {
  background-color: #ececec;
}

.itemize .panel-box .panel::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.itemize .panel-box .panel .item-media-box__hd {
  margin-right: 12px;
  width: 60px;
  height: 36px;
  line-height: 60px;
  text-align: center;
  overflow: hidden;
}

.itemize .panel-box .panel .item-media-box__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: calc(100% - 72px);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.tabs-panel__ft {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.tabs-panel__ft .tabs-panel-more {
  position: relative;
  display: flex;
  align-items: center;
  margin: 10rpx 0;
  padding: 20rpx 10rpx;
}

.tabs-panel__ft .tabs-panel-more:active {
  background-color: #ececec;
}

.tabs-panel__ft .tabs-panel-more::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.itemize .tabs-box.loading {
  position: relative;
  padding: 24rpx;
  background: #fff;
  border-radius: 6px;
}

.itemize .tabs-box .tabs-bar.skeleton {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 24rpx;
}

.itemize .tabs-box .tabs-bar.skeleton .bar {
  width: 120rpx;
  height: 60rpx;
  margin-right: 24rpx;
  background: #f0f0f0;
}

.itemize .tabs-box .panel-box.skeleton {
  padding: 0;
}

.itemize .tabs-box .panel-box.skeleton .panel:last-child {
  padding-bottom: 0;
}

.itemize .tabs-box .panel-box.skeleton .panel .item-media-box__hd {
  background: #f0f0f0;
}

.itemize .tabs-box .panel-box.skeleton .panel .item-media-box__bd {
  height: 36px;
  background: #f0f0f0;
}

/* Latest */
