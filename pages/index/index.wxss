}

.portfolio .skeleton .cu-item {
  display: flex;
  align-items: center;
}

.portfolio .skeleton .skeleton-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.portfolio .bg-imgz {
