/**index.wxss**/
page::-webkit-scrollbar {
  display: none;
}

page {
  --tbs-height: 660rpx;
}

.page.iphone-x {
  padding-bottom: 20rpx;
}

.index-headAvatar {
  position: relative;
  width: 48px;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.index-headAvatar image {
  width: 50%;
  height: 50%;
  border-radius: 50%;
}

.index-headAvatar .login-button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

/* Index */
.index {
  position: relative;
}

/* Header */
.header {
  padding: 0 40rpx;
  background: -webkit-linear-gradient(to right, #6188ef, #98b4f5);
  background: linear-gradient(to right, #6188ef, #98b4f5);
  color: #fff;
}

.header .app-title {
  font-weight: bold;
  font-size: 58rpx;
  line-height: 68rpx;
}

.header .app-brief {
  font-size: 28rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}

.header .app-title_text {
  display: inline-block;
  vertical-align: middle;
}

.search-form {
  font-size: 90%;
}

/* Feature */
.feature {
  margin: 24rpx;
  border-radius: 6px;
  background: #fff;
}

.feature .skeleton {
  width: 100%;
  display: block;
  overflow: hidden;
}

.feature .skeleton .skeleton-rect {
  height: 300rpx;
  margin: 24rpx;
  background: #f0f0f0;
  border-radius: 15rpx;
}

.feature .screen-swiper {
  text-align: center;
}

.feature_article_figures {
  position: relative;
  display: block;
  width: 100%;
  max-height: 56.25vh;
}

.feature_article_figure_cover {
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
}

.feature_article_figure_title {
  position: absolute;
  bottom: 50rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.feature_article_figure_title text {
  display: inline-block;
  max-width: 160px;
  line-height: 40rpx;
  background: rgba(38, 38, 38, 1);
  border-radius: 8rpx;
  opacity: 0.9;
  padding: 10rpx 15rpx;
  font-size: 80%;
  color: #fff;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/* Portfolio */
.portfolio {
  position: relative;
  display: flex;
  flex-direction: column;
  background: #fff;
  margin: 24rpx;
  border-radius: 6px;
  box-shadow: 0px 5px 20px -5px #ddd;
}

.portfolio .cu-list {
