  font-weight: bold;
}

.weui-tabs-bar__item {
  background-color: #fff !important;
  color: rgba(0, 0, 0, .9) !important;
}

.tabs-panel {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.tabs-panel .panel-box {
  margin: 0;
}

.tabs-panel .panel-box .panel {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  padding: 18rpx 10rpx;
}

.tabs-panel .panel-box .panel:active {
  background-color: #ececec;
}

.tabs-panel .panel-box .panel::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
}

.tabs-panel .panel-box .panel .item-media-box__hd {
  margin-right: 12px;
  width: 60px;
  height: 36px;
  line-height: 60px;
  text-align: center;
  overflow: hidden;
}

.tabs-panel .panel-box .panel .item-media-box__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  width: calc(100% - 72px);
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.tabs-panel__ft {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.tabs-panel__ft .tabs-panel-more {
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 28rpx 10rpx;
}

.tabs-panel__ft .tabs-panel-more:active {
  background-color: #ececec;
}

.tabs-panel__ft .tabs-panel-more::before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.1);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  z-index: 2;
}

.tabs-panel__ft .tabs-panel-more .cell__hd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.tabs-panel__ft .tabs-panel-more .cell__bd::after {
  content: " ";
  width: 12px;
  height: 24px;
  -webkit-mask-position: 0 0;
  mask-position: 0 0;
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;
  -webkit-mask-size: 100%;
  mask-size: 100%;
  background-color: currentColor;
  color: rgba(0, 0, 0, 0.3);
  -webkit-mask-image: url(data:image/svg+xml,%3Csvg%20width%3D%2212%22%20height%3D%2224%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M2.454%206.58l1.06-1.06%205.78%205.779a.996.996%200%20010%201.413l-5.78%205.779-1.06-1.061%205.425-5.425-5.425-5.424z%22%20fill%3D%22%23B2B2B2%22%20fill-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E);
  mask-image: url(data:image/svg+xml,%3Csvg%20width%3D%2212%22%20height%3D%2224%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M2.454%206.58l1.06-1.06%205.78%205.779a.996.996%200%20010%201.413l-5.78%205.779-1.06-1.061%205.425-5.425-5.425-5.424z%22%20fill%3D%22%23B2B2B2%22%20fill-rule%3D%22evenodd%22%2F%3E%3C%2Fsvg%3E);
  position: absolute;
  top: 50%;
  right: 10rpx;
  margin-top: -12px;
}

.tabs-panel .panel-box .panel.skeleton .item-media-box__hd {
  background: #f0f0f0;
}

.tabs-panel .panel-box .panel.skeleton .item-media-box__bd {
  height: 36px;
  background: #f0f0f0;
}

