.article-separator {
  position: relative;
  display: block;
  width: calc(100% - 1rem);
  height: 1px;
  margin: 46rpx 0.5rem 46rpx;
  color: #c0c0c0;
  background: linear-gradient( to left, #c0c0c0 calc(50% - 16px), transparent calc(50% - 16px), transparent calc(50% + 16px), #c0c0c0 calc(50% + 16px) );
}

.article-separator .before,
.article-separator .after {
  background: #c0c0c0;
  display: block;
  width: 1px;
  height: 0.6rem;
  position: absolute;
  top: calc(50% - 0.3rem);
  transform: rotate(22.5deg);
}
.article-separator .before {
  left: calc(50% - 0.4rem);
}
.article-separator .after {
  right: calc(50% - 0.4rem);
}

