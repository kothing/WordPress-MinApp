<!--pages/myposts/posts.wxml-->
<view class="tab-content">
    <view class="myposts">
        <view class="posts_loading" wx:if="{{loading == true}}">
            Loading
        </view>
        <block wx:else>
            <view class="posts_article" wx:if="{{posts.length > 0}}">
                <block wx:for="{{posts}}" wx:for-index="i" wx:key="item">
                    <view bindtap="bindDetail" class="posts_article_box" id="{{item.id}}">
                        <view class="posts_article_figure">
                            <image mode="aspectFill" class="posts_article_cover" src="{{item.meta.thumbnail}}"></image>
                            <view class="posts_article_during">
                                <text>{{item.category[0].name}}</text>
                            </view>
                        </view>
                        <view class="posts_article_title">{{item.title.rendered}}</view>
                        <view class="posts_article_desc">{{item.excerpt.rendered}}</view>
                    </view>
                </block>
            </view>
            <view class="posts_article" wx:if="{{isLastPage&&posts.length === 0}}">
                <view class="posts_article_null">
                    <image mode="aspectFill" class="posts_article_cover" src="../../images/message.png"></image>
                </view>
                <view class="last_text">对不起! 你查看的内容没有找到</view>
            </view>
            <view class="last_text" wx:if="{{isLastPage && posts.length > 0}}">已经到底啦~</view>
            <view class="last_text" wx:if="{{!isLastPage && posts.length > 0}}">努力加载中...</view>
        </block>
    </view>
</view>