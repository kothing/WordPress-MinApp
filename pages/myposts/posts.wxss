/* pages/myposts/posts.wxss */

page::-webkit-scrollbar {
  display: none;
}

.myposts {
  height: 100%;
  min-height: 100vh;
  padding: 20rpx 36rpx;
}

.posts_loading {
  height: 90vh;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content:center;
}

.posts_article_box {
  margin-bottom: 38rpx;
  padding-bottom: 38rpx;
  border-bottom: 1px dotted #c5c5c5;
}

.posts_article_figure {
  position: relative;
  display: block;
  width: 100%;
  height: 0;
  padding: 0;
  padding-bottom: 56.25%;
  overflow: hidden;
}

.posts_article_cover {
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
}

.posts_article_cover {
  width: 100%;
  height: 380rpx;
  border-radius: 15rpx;
}

.posts_article {
  margin-top: 20rpx;
}

.posts_article_title {
  width: 100%;
  font-size: 110%;
  font-weight: 500;
  color: rgba(38, 38, 38, 1);
  line-height: 50rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.posts_article_desc {
  color: #888888;
  margin-top: 16rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  overflow: hidden;
}

.posts_article_during {
  position: absolute;
  top: 326rpx;
  left: 16rpx;
  z-index: 1;
  line-height: 40rpx;
  background: rgba(38, 38, 38, 1);
  border-radius: 8rpx;
  opacity: 0.9;
  padding: 2rpx 10rpx;
  text-align: center;
}

.posts_article_during text {
  font-size: 80%;
  color: #fff;
}

.posts_article_null {
  position: relative;
  height: 380rpx
}

.last_text {
  width: 100%;
  text-align: center;
  color: #AAA;
  font-size: 24rpx;
  margin: 90rpx 0 30rpx;
}