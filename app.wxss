/**app.wxss**/
@import "vendor/style/main.wxss";
@import "vendor/style/icon.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

button::after {
  border-radius: 0;
  border: none;
}

.relative {
  position: relative;
}

.userLogin {
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
  position: absolute;
}

.advert {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

/* display */
.flex {
  display: flex !important;
}
.display-none {
  display: none !important;
}

/* font */
.font-weight-blod {
  font-weight: bold !important;
}

/* size */
.width-100vw {
  width: 100% !important;
}

.height-286rpx {
  height: 286rpx;
}

/* position */
.absolute-top-0 {
  position: absolute;
  top: 0;
}


/* 边距 */
.padding-24rpx {
  padding: 24rpx;
}
